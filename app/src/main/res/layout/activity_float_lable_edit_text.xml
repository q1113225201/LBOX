<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_float_lable_edit_text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sjl.lbox.app.ui.CustomView.EditText.FloatLableEditText.FloatLableEditTextActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/etTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="10"
        app:counterOverflowTextAppearance="@style/OverflowTextAppearance"
        app:errorTextAppearance="@style/ErrorStyle">

        <EditText
            android:id="@+id/etInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="姓名" />
    </android.support.design.widget.TextInputLayout>
</LinearLayout>
