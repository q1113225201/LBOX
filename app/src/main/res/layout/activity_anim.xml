<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_anim"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.ui.animate.activityAnim.ActivityAnimActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            style="@style/TextViewCommonStyle"
            android:text="Activity界面切换" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewCommonStyle"
                android:text="overridePendingTransition" />

            <Button
                android:id="@+id/btnSlide1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Slide" />

            <Button
                android:id="@+id/btnFade1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fade" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewCommonStyle"
                android:text="ActivityOptions \n (兼容包ActivityOptionsCompat)" />

            <Button
                android:id="@+id/btnSlide2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Slide" />

            <Button
                android:id="@+id/btnFade2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fade" />
            <Button
                android:id="@+id/btnExplode2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Explode" />

            <Button
                android:id="@+id/btnSharedElement2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shared Element" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivSharedElement1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@drawable/compass_background"
                    android:transitionName="sharedElement1" />

                <ImageView
                    android:id="@+id/ivSharedElement2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@drawable/compass_front"
                    android:transitionName="sharedElement2" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
