<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rotate3d"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sjl.lbox.app.ui.animate.TransitionAnim.Rotate3d.Rotate3dActivity">
    <Button
        android:id="@+id/btnRotateX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="X"/>
    <Button
        android:id="@+id/btnRotateY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Y"/>
    <RelativeLayout
        android:id="@+id/rlRotate3D"
        android:layout_width="200dp"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/ivRotate3D1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/gesture_point_success"/>
        <ImageView
            android:id="@+id/ivRotate3D2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="gone"
            android:src="@drawable/gesture_point_select"/>
    </RelativeLayout>
</LinearLayout>
