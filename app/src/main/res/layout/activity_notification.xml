<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sjl.lbox.app.Notification.NotificationActivity">

    <Button
        android:id="@+id/btnNotificationNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="普通通知" />

    <Button
        android:id="@+id/btnNotificationProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="带进度条的通知" />

    <Button
        android:id="@+id/btnNotificationBigText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BigText" />

    <Button
        android:id="@+id/btnNotificationInBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inbox"/>

    <Button
        android:id="@+id/btnNotificationBigPicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BigPicture"/>

    <Button
        android:id="@+id/btnNotificationBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="HangUp 横幅通知"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnNotificationMedia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="MediaStyle"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnNotificationCustom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="自定义View"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/btnNotificationRemove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="清除所有通知"/>
</LinearLayout>
